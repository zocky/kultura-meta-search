@font-face {
  font-family: "OpenSans";
  src: url("http://services.ljudmila.net/static/OpenSans-ExtraBold.ttf")
  format("truetype");
}

body {
  font-family:sans-serif;
  font-size:12px;
}

body, body * {
  box-sizing:border-box;
  -moz-box-sizing:border-box;
}
#sidebar {
  position:absolute;
  top:120px;
  left:0px;
  width:0px;
  min-height:20px;
}
#header {
  position:absolute;
  top:0px;
  height:40px;
  padding:10px;
  background:white;
  text-align:left;
  left:0;
  width:250px;
}
body.columns #header {
  left:80px;
  right:0;
  width:auto;
}
#q {
  width:80%;
}
#logo {
  display:none;
}
body.columns  #logo {
  display:block;
}
#logo img {
  width:70px;
  position:absolute;
  top:0px;
  left:10px;
}
#content {
  right:auto;
  width:250px;
}
body.columns #content {
  right:0;
  width:auto;
}
#content {
  position:absolute;
  z-index:1;
  top:48px;
  left:0px;
  min-height:200px;
  padding: 0 1em;
  xborder-left:1px solid navy;
}
.spinner {
  background:url(http://services.ljudmila.net/static/ajax-loader.gif) right center no-repeat
}
a {
  text-decoration:none;
  color:#002FA1
}
a:hover {
  text-decoration:underline;
}

.heading {
  font-size:11px;
  clear:left;
  font-family:OpenSans;
  color:#ace;
  text-transform:uppercase;
  display:none;
}

.box {
  display:none;
}


.source { 
  display:inline;
  font-size:smaller;
  text-transform:uppercase;
  text-align:baseline;
  margin-right:0.25em;
}
.source a {
  color:#76B82A;
}
.title { 
  text-align:baseline;
}


#def .title, #def .url {
  font-size:12px;
  display:inline;
  margin-right:0.5em
}
#image-wrap {
  height:90px;
  overflow:hidden;
  white-space:nowrap;
}
#image {
  height:90px;
}
body:not(.columns) #image-wrap {
  width:220px;
}
#image .result.image {
  display:inline-block;
  height:80px;
  position:relative;
}
#image .result.image .source {
  position:absolute;
  bottom:0;
  right:0;
  background:black;
  padding:0 0.25em;
  margin:0;
  font-size:66.6%;
  opacity:0.66;
  box-shadow: 0 0 2px black;
}
#image .result.image .source a {
  color:white;
}
#image .result.image .title,
#image .result.image .description,
#image .result.image .url {
  display:none;
}
#image .result.image img {
  height:80px;
  margin:0.25em;
  width:auto;
}


#data-wrap {
  position:fixed;
  left:0;
  bottom:0;
  width:250px;
  overflow:hidden;
  top:180px;
}
body.columns #data-wrap {
  overflow:auto;
  right:0;
  width:100%;
}

body.columns #data {
  -webkit-column-width:220px;
  -webkit-column-gap:0px;
  -moz-column-width:220px;
  -moz-column-gap:0px;
}
#data {
  height:100%;
  width:250px;
  padding-left:20px;
  position:relative;
}
#data .datasource {
  clear:both;
  padding-top:0.5em;
  width:220px;
}
#data .source { 
  font-family:'OpenSans';
  background:#76B82A;
  font-weight:bold;
  font-size:13px;
  display:block;
  color:#efefef;
  width:210px;
  padding:1px 0.25em;
  position:relative;
  -webkit-column-break-after:avoid;
}
#data .source a {
 color:#efefef;
}
#data .result {
  clear:both;
  border-top: solid 1px #ddd;
  margin-top:0.25em;
  padding-top:0.25em;
  display:inline-block;
  width:210px;
  overflow:hidden;
}
#data .result .source {
  display:none;
}

#data .source img {
  position:absolute;
  top: 0.15em;
  right:0.15em;
  font-size:16px;
  margin-left:0.15em;
}
#data .url {
  display:none;
}

#data .title {
  font-size:11px;
  font-weight:bold;
  -break-after:avoid;
  -webkit-break-inside:avoid;
}

#data .result .image {
  float:right;
  max-width:4.5em;
  max-height:4.5em;
}

#data .description {
  font-size:10px;
  color:#444;
  line-height:1em
  -webkit-break-before:avoid;
  -webkit-break-inside:avoid;
}


#detail-wrap {
  position:fixed;
  top:0;
  right:0;
  bottom:0;
  left:250px;
  border-left:solid #ace  4px;
  z-index:30;
}

body.columns #detail-wrap {
 display:none;
}
body.columns.to-detail #detail-wrap {
 display:block;
}

#detail {
  background:white;
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
}
.heading {
  white-space:nowrap;
}
#heading-data a {
  font-size:9px;
  margin:0 2px;
  color:#ace;
}
#data .result.selected {
  background:#ace;
  border:solid 3px #ace;
}

body:not(.columns) #data .result.selected {
  width:260px;
  padding-left:10px;
  margin-left:-10px;
  padding-right:40px;
  border-radius:4px;
}

.datasource-head {
  display:inline-block;

}
